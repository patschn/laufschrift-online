<% Rails.application.assets.context_class.class_eval do
  include Rails.application.routes.url_helpers
  include ActionView::Helpers::JavaScriptHelper
end
%>
"use strict";

var Config = { };
Object.defineProperty(Config, "sequenceBasePath", { value: '<%=j sequences_path %>', writable: false , configurable: false, enumerable: true });
Object.defineProperty(Config, "commitPath", { value: '<%=j sign_commit_path %>', writable: false , configurable: false, enumerable: true });
Object.defineProperty(Config, "fgColors", { value: ['y', 'r', 'g', 'b'], writable: false , configurable: false, enumerable: true });
Object.defineProperty(Config, "bgColors", { value: ['y', 'r', 'g', 'b'], writable: false , configurable: false, enumerable: true });
Object.defineProperty(Config, "specialCharacters", { value: [ 'Ω', 'Σ', '¤', 'æ', 'Æ', '£', '🍷', '♪', '🚗', '⛵', '🕓', '♥', '⌂', '◆', '▲', '▶', '▼', '◀', '☉', '⬆', '⬇', '⇦', '⇨', '⌀', '∅' ], writable: false, configurable: false, enumerable: true });
(function() {
  var assets = [];
<%
  images  = Dir.glob("app/assets/images/*_hover.png")
  images += Dir.glob("app/assets/images/*_select.png")
  images.each do |image|
%>
  assets.push('<%=j asset_path(image.split('/').last) %>');
<% end %>
  Object.defineProperty(Config, "preloadAssets", { value: assets, writable: false, configurable: false, enumerable: true });
}());
Object.freeze(Config);

