<div id="title">
	<h1>Laufschrift Online</h1>

	<div id="help">
		<a href="https://carl-adam.theoinf.tu-ilmenau.de/trac/swp_s14_18/wiki"> <img src="question.png" alt="Hilfe" /> </a>
	</div>
	<br />
</div>

<div>
	<div id="seq">
		<div>
			<a href="#" id="sequence-new">Neu</a>
			<br>
			<a href="#" id="sequence-save">Speichern</a>
			<br>
			<a href="#" id="sequence-save-as">Speichern als…</a>
			<br>
			<a href="#" id="sequence-load">Laden</a>
			<br>
			<a href="#" id="sequence-delete">Löschen</a>
		</div>
		<div id="selection">
			<br>
			<select size="20" id="sequences" >
				<% @sequences.each do |sequence| %>
				<option value="<%= sequence.id %>"><%= sequence.title %> </option>
				<% end %>
			</select>
		</div>
	</div>

	<div id="sequence">
		<div class="point"><h2>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Sequenz</h2></div><br>
		<div id="sequence-box">
			<div id="sequence-inner"></div>
		</div>
		<div id="debug">
			<br>
			<div class="point"><h2>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Debugfeld</h2></div><br>
			<%= form_tag({controller: "sign", action: "commit"}, remote: true, id: "commit-form") do %>
			<%= text_area_tag(:text, "", id: "commit-text", size: "24x6") %>
			<%= submit_tag("Los") %>
			<% end %>
		</div>
	</div>

	<div id="toolbox">
		<h2>Toolbox</h2>
		<div id="toolbox-inner"></div>
	</div>
</div>

