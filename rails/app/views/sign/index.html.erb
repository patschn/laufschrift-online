<select size="1" id="sequences">
<% @sequences.each do |sequence| %>
<option value="<%= sequence.id %>"><%= sequence.title %> 
</option>
<% end %>
</select>
<a href="#" id="sequence_load">Laden</a>
<a href="#" id="sequence_delete">Löschen</a>
</div>
<div>
<a href="#" id="sequence_new">Neu</a>
<a href="#" id="sequence_save">Speichern</a>
<a href="#" id="sequence_save_as">Speichern als…</a>
</div>

<div id="sequence">
<h2>Sequenz</h2>
<div id="sequence-box">
<div id="sequence-inner">
</div>
</div>
</div>

<div id="toolbox">
<h2>Toolbox</h2>
<div id="toolbox-inner">
</div>
</div>

<h2>Debug-Feld</h2>
<%= form_tag({controller: "sign", action: "commit"}, remote: true, id: "commit_form") do %>
